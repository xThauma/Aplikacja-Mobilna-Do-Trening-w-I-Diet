<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="26">

        <ImageButton
            android:id="@+id/mealCB"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_box_empty"
            android:layout_weight="2"
            android:background="@drawable/custom_border_no_top_line"
            android:gravity="center" />

        <TextView
            android:id="@+id/foodNameTVMeal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/custom_border_no_top_and_left_line"
            android:gravity="center"
            android:text="Name" />

        <TextView
            android:id="@+id/foodContentCaloriesMeal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/custom_border_no_top_and_left_line"
            android:gravity="center"
            android:text="kcals" />

        <TextView
            android:id="@+id/foodContentProteinsMeal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/custom_border_no_top_and_left_line"
            android:gravity="center"
            android:text="@string/proteins_short" />

        <TextView
            android:id="@+id/foodContentCarbsMeal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/custom_border_no_top_and_left_line"
            android:gravity="center"
            android:text="@string/carbs_short" />

        <TextView
            android:id="@+id/foodContentFatsMeal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/custom_border_no_top_and_left_line"
            android:gravity="center"
            android:text="@string/fats_short" />

    </LinearLayout>

</LinearLayout>