<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    style="@style/AppTheme.Fragment">

    <LinearLayout
        android:id="@+id/llstop"
        android:layout_width="match_parent"
        android:background="@drawable/custom_border"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:weightSum="15">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_border_only_right_line"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_weight="10"
            android:text="00:00:00"
            android:textColor="#009688"
            android:textSize="@dimen/text_size_row_content"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:background="@null"
            android:layout_width="0dp"
            style="@style/ButtonTheme2"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:text="@string/save_lap" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_border"
        android:layout_below="@+id/llstop"
        android:weightSum="3">

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            style="@style/ButtonTheme2"
            android:background="@drawable/custom_border_only_right_line"
            android:layout_weight="1"
            android:text="@string/start2" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:background="@drawable/custom_border_only_right_line"
            style="@style/ButtonTheme2"
            android:layout_weight="1"
            android:text="@string/pause2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            style="@style/ButtonTheme2"
            android:background="@null"
            android:layout_weight="1"
            android:text="@string/reset2" />

    </LinearLayout>


    <ListView
        android:id="@+id/listview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll2stop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

</RelativeLayout>