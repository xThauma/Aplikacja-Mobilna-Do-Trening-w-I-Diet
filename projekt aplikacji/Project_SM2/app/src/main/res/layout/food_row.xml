<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="26">

        <TextView
            android:id="@+id/foodNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/custom_border_no_top_line"
            android:gravity="center"
            android:text="Name" />

        <TextView
            android:id="@+id/foodContentCalories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/custom_border_no_top_and_left_line"
            android:gravity="center"
            android:text="kcals" />

        <TextView
            android:id="@+id/foodContentProteins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/custom_border_no_top_and_left_line"
            android:gravity="center"
            android:text="@string/proteins_short" />

        <TextView
            android:id="@+id/foodContentCarbs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/custom_border_no_top_and_left_line"
            android:gravity="center"
            android:text="@string/carbs_short" />

        <TextView
            android:id="@+id/foodContentFats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/custom_border_no_top_and_left_line"
            android:gravity="center"
            android:text="@string/fats_short" />


    </LinearLayout>

</LinearLayout>