<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.LayoutPadding">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/custom_border"
        android:id="@+id/food_diet_startingLL"
        android:weightSum="16"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/fragmentKcal"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_size"

            android:layout_weight="14"
            android:gravity="center">
        </RelativeLayout>

        <ImageButton
            android:id="@+id/summaryIB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:background="@drawable/ic_summary" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/layoutToReplace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wrap"
        android:layout_below="@+id/food_diet_startingLL">

    </RelativeLayout>

</RelativeLayout>